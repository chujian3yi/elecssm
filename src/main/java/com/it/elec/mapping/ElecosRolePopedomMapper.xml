<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper  namespace="com.it.elec.dao.ElecosRolePopedomDao">

<resultMap id="baseResultMap" type="ElecosRolePopedom">
  <id property="roleId"  column="role_id"/>
  <result property="mid" column="MID"/>
  <result property="pid" column="pid"/>
</resultMap>
	<!--find mid&pid by roleId  -->
	<select id="findMIDandPIDByRoleId" resultMap="baseResultMap">
		select MID,pid
		from elecos_role_popedom
		where role_id=#{roleId}
	</select>
	
	<delete id="delete">
		delete from elecos_role_popedom
		where role_id = #{roleId}
	</delete>
	
	<insert id="save">
		insert into elecos_role_popedom
		<trim prefix="(" suffix=")" suffixOverrides=",">
		<if test="roleId!=null ">role_id,</if>
		<if test="mid!=null ">MID,</if>
		<if test="pid!=null ">pid,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
		<if test="roleId!=null ">#{roleId},</if>
		<if test="mid!=null ">#{mid},</if>
		<if test="pid!=null ">#{pid},</if>
		</trim>
	</insert>
	
	<select id="findRolePopedomByRoleId" resultMap="baseResultMap">
		select role_id,MID,pid
		from elecos_role_popedom
		where role_id=#{roleId}
		and MID=#{mid}
		and pid=#{pid}
	</select>
</mapper>